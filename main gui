-- LTGAMING x GAME - Redz-style GUI (single LocalScript)
-- Paste this as a LocalScript under StarterGui. It's a self-contained GUI framework
-- with tabs, toggles, sliders, dropdowns, keybind, draggable window, theme support
-- Replace callback placeholders with your script logic (e.g. enabling farms, abilities).

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Configuration / Theme
local THEME = {
    Accent = Color3.fromRGB(88, 101, 242), -- main accent color
    Background = Color3.fromRGB(24, 26, 30),
    Panel = Color3.fromRGB(18, 20, 23),
    Text = Color3.fromRGB(235, 238, 242),
    Muted = Color3.fromRGB(150, 156, 165),
}

local UI = Instance.new("ScreenGui")
UI.Name = "LTGAMINGxGAME_GUI"
UI.ResetOnSpawn = false
UI.Parent = PlayerGui

-- Helpers
local function make(name, props)
    local obj = Instance.new(props.Class or "Frame")
    obj.Name = name
    for k, v in pairs(props) do
        if k ~= "Class" then
            obj[k] = v
        end
    end
    return obj
end

local function tween(obj, props, time)
    time = time or 0.25
    TweenService:Create(obj, TweenInfo.new(time, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), props):Play()
end

-- Main window
local Main = make("MainWindow", {
    Class = "Frame",
    Size = UDim2.new(0, 920, 0, 520),
    Position = UDim2.new(0.5, -460, 0.5, -260),
    BackgroundColor3 = THEME.Background,
    AnchorPoint = Vector2.new(0.5, 0.5),
    Parent = UI,
})

Main.ClipsDescendants = true

-- UI Stroke & Round
local round = Instance.new("UICorner")
round.Parent = Main
round.CornerRadius = UDim.new(0, 14)
local stroke = Instance.new("UIStroke")
stroke.Thickness = 1
stroke.Color = Color3.fromRGB(12, 12, 12)
stroke.Parent = Main

-- Title bar
local TitleBar = make("TitleBar", {
    Class = "Frame",
    Size = UDim2.new(1, 0, 0, 48),
    Position = UDim2.new(0, 0, 0, 0),
    BackgroundTransparency = 1,
    Parent = Main,
})
local title = make("Title", {
    Class = "TextLabel",
    Size = UDim2.new(1, -24, 1, 0),
    Position = UDim2.new(0, 12, 0, 0),
    BackgroundTransparency = 1,
    Text = "LTGAMING x GAME",
    TextColor3 = THEME.Text,
    Font = Enum.Font.GothamBlack,
    TextSize = 18,
    TextXAlignment = Enum.TextXAlignment.Left,
    Parent = TitleBar,
})
local subtitle = make("Subtitle", {
    Class = "TextLabel",
    Size = UDim2.new(1, -24, 1, 0),
    Position = UDim2.new(0, 12, 0, 20),
    BackgroundTransparency = 1,
    Text = "Lightweight • Fast • Clean",
    TextColor3 = THEME.Muted,
    Font = Enum.Font.Gotham,
    TextSize = 12,
    TextXAlignment = Enum.TextXAlignment.Left,
    Parent = TitleBar,
})

-- Close & Minimize
local CloseBtn = make("Close", {
    Class = "TextButton",
    Size = UDim2.new(0, 36, 0, 36),
    Position = UDim2.new(1, -48, 0, 6),
    BackgroundColor3 = THEME.Panel,
    Text = "✕",
    TextColor3 = THEME.Text,
    Font = Enum.Font.GothamBlack,
    TextSize = 18,
    Parent = TitleBar,
})
local MinBtn = make("Minimize", {
    Class = "TextButton",
    Size = UDim2.new(0, 36, 0, 36),
    Position = UDim2.new(1, -96, 0, 6),
    BackgroundColor3 = THEME.Panel,
    Text = "—",
    TextColor3 = THEME.Text,
    Font = Enum.Font.GothamBlack,
    TextSize = 18,
    Parent = TitleBar,
})
for _, b in pairs({CloseBtn, MinBtn}) do
    local c = Instance.new("UICorner")
    c.Parent = b
    c.CornerRadius = UDim.new(0, 8)
    b.BorderSizePixel = 0
end

-- Left sidebar (tabs)
local Sidebar = make("Sidebar", {
    Class = "Frame",
    Size = UDim2.new(0, 220, 1, -48),
    Position = UDim2.new(0, 12, 0, 56),
    BackgroundColor3 = THEME.Panel,
    Parent = Main,
})
make("UISideCorner", {Class = "UICorner", Parent = Sidebar, CornerRadius = UDim.new(0, 10)})

local TabsList = make("TabsList", {Class = "UIListLayout", Parent = Sidebar, Padding = UDim.new(0, 8), SortOrder = Enum.SortOrder.LayoutOrder})
TabsList.Padding = UDim.new(0, 6)

local function createTabButton(text, order)
    local btn = make(text .. "Btn", {
        Class = "TextButton",
        Size = UDim2.new(1, -16, 0, 44),
        Position = UDim2.new(0, 8, 0, 8),
        BackgroundColor3 = Color3.fromRGB(22, 24, 27),
        Text = text,
        TextColor3 = THEME.Text,
        Font = Enum.Font.GothamSemibold,
        TextSize = 14,
        LayoutOrder = order or 1,
        Parent = Sidebar,
    })
    local u = Instance.new("UICorner") u.CornerRadius = UDim.new(0, 8) u.Parent = btn
    btn.MouseEnter:Connect(function() tween(btn, {BackgroundColor3 = THEME.Panel}, 0.12) end)
    btn.MouseLeave:Connect(function() tween(btn, {BackgroundColor3 = Color3.fromRGB(22, 24, 27)}, 0.12) end)
    return btn
end

local tabButtons = {}
local tabNames = {"Main", "Combat", "Farm", "Settings"}
for i, name in ipairs(tabNames) do
    tabButtons[name] = createTabButton(name, i)
end

-- Content area
local Content = make("Content", {
    Class = "Frame",
    Size = UDim2.new(1, -256, 1, -64),
    Position = UDim2.new(0, 244, 0, 56),
    BackgroundColor3 = THEME.Background,
    Parent = Main,
})
make("ContentCorner", {Class = "UICorner", Parent = Content, CornerRadius = UDim.new(0, 10)})

-- Tab switching logic
local pages = {}
local function createPage(name)
    local p = make(name .. "Page", {
        Class = "Frame",
        Size = UDim2.new(1, 0, 1, 0),
        Position = UDim2.new(0, 0, 0, 0),
        BackgroundTransparency = 1,
        Visible = false,
        Parent = Content,
    })
    pages[name] = p
    return p
end

-- Build pages and example sections
local mainPage = createPage("Main")
local combatPage = createPage("Combat")
local farmPage = createPage("Farm")
local settingsPage = createPage("Settings")

-- Tab switching logic
local current = nil
local function switchTab(name)
    if current == name then return end
    if current and pages[current] then pages[current].Visible = false end
    if pages[name] then pages[name].Visible = true end
    current = name
    -- visual highlight
    for n, btn in pairs(tabButtons) do
        if n == name then
            tween(btn, {BackgroundColor3 = THEME.Accent}, 0.18)
        else
            tween(btn, {BackgroundColor3 = Color3.fromRGB(22, 24, 27)}, 0.18)
        end
    end
end

for n, btn in pairs(tabButtons) do
    btn.MouseButton1Click:Connect(function()
        switchTab(n)
    end)
end

switchTab("Main")

-- Close & minimize
local isMin = false
CloseBtn.MouseButton1Click:Connect(function() UI.Enabled = false end)
MinBtn.MouseButton1Click:Connect(function()
    isMin = not isMin
    if isMin then
        tween(Main, {Size = UDim2.new(0, 320, 0, 56)}, 0.22)
        for _, child in pairs(Main:GetChildren()) do
            if child ~= Main and child ~= TitleBar then child.Visible = false end
        end
    else
        tween(Main, {Size = UDim2.new(0, 920, 0, 520)}, 0.22)
        for _, child in pairs(Main:GetChildren()) do
            child.Visible = true
        end
    end
end)

-- Draggable window
local dragging, dragInput, dragStart, startPos
local function updateDrag(input)
    local delta = input.Position - dragStart
    Main.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end
TitleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = Main.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)
TitleBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then dragInput = input end
end)
UserInputService.InputChanged:Connect(function(input)
    if dragging and input == dragInput then updateDrag(input) end
end)

-- Keybind toggle (RightShift)
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.RightShift then UI.Enabled = not UI.Enabled end
end)

LocalPlayer.CharacterRemoving:Connect(function() UI:Destroy() end)
